issn = {10956859},
journal = {Gynecologic Oncology},
keywords = {Demography,Female authorship,Gender disparities},
number = {3},
pages = {542--546},
title = {{Gender trends in gynecologic oncology authorship: Implications for the critical evaluation of gender distribution in academic rank and leadership positions}},
volume = {151},
year = {2018}
}
@article{Berker2018,
abstract = {{\textcopyright} 2018 Akad{\'{e}}miai Kiad{\'{o}}, Budapest, Hungary Countless bibliometric indexes have been proposed to assess researchers' productivities, in particular, in fields where the author sequence is regarded helpful in determining authors' individual credits. Unfortunately, the most popular h-index ignores author ranks and leads to bias with multi-author publications; and of the many bibliometric counting methods proposed for assigning credit to authors, such as harmonic or geometric counting, none seems to have been widely adopted yet. In this work, I challenge the assumption that the total credit for a publication be equal to 1. This total-credit normalization assumption diminishes first-author credit and may impede adoption of multi-author-aware credit assignment rules. Other than on relative contributions, author credit could be based on variables such as accountability, which remains unchanged for the first (and potentially, the last) author regardless of additional coauthors. Therefore, I study the adequacy of several counting methods for first-author-normalized credit, giving full credit to the first author while also crediting coauthors. Harmonic counting has been shown to agree well with empirical data; however, unlike geometric counting, harmonic counting results in unbounded total credit for a publication with first-author-credit normalization in the limit of many authors. I therefore propose adaptable geometric counting and evaluate how it combines the advantages of harmonic and geometric counting through an additional parameter. I show that the golden ratio is a parameter for geometric counting that agrees as well as harmonic counting with empirical data for total-credit normalization; and I discuss the impact of using adaptable geometric counting with first-author-normalized credit. In particular, the latter features bounded total credits even when full credit is given to first authors. In conclusion, geometric counting with the golden ratio can be used for credit assignment without having to choose a parameter value, yet offers customization potential and can be combined with either normalization assumption.},
address = {Dordrecht},
author = {Berker, Yannick},
doi = {10.1007/s11192-017-2632-3},
issn = {15882861},
journal = {Scientometrics},
keywords = {Bibliometric counting,Coauthor problem,Golden ratio,Validation},
month = {mar},
number = {3},
pages = {839--857},
title = {{Golden-ratio as a substitute to geometric and harmonic counting to determine multi-author publication credit}},
url = {http://link.springer.com/10.1007/s11192-017-2632-3},
volume = {114},
year = {2018}
}
@article{Lissoni2015,
abstract = {This paper explores the determinants of inventorship attribution in academic patents, compared to those of authorship attribution. Starting from a sample of 308 italian scientists, we have selected 681 patent-publication pairs in different disciplinary fields (i.e. the patent and the publication describe the same invention) using text mining techniques and we have found that the number of authors is larger than the numbers of inventors. In order to understand who is excluded from inventorship, we have measured each authors contribution using the position in the publication byline. The econometric analysis shows that the first and the last authors have a relatively lower probability to be excluded. We have shown however that - controlling for individual contribution - seniority matters and that other things being equal professional experience reduces the probability of exclusion. In particular a ten year increase of professional experience decreases the probability of exclusion of first authors in the byline by 0.16 and of last authors of 0.13. This paper contributes to the literature on academic patents (as we envisage potential room for litigation) and to the debate on the criteria of authorship in science.},
