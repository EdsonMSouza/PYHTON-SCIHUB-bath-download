doi = {10.1055/s-0044-102267},
issn = {14394413},
journal = {Deutsche Medizinische Wochenschrift},
keywords = {citation,gender,odds ratio,prestige},
number = {10},
pages = {e85--e94},
title = {{The gender gap in highest quality medical research: A scientometric analysis of the representation of female authors in highest impact medical journals}},
